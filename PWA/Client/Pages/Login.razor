@page "/login"

<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
    <!-- Background Shape-->
    <div class="background-shape"></div>
    <div class="container">
        <img class="big-logo" src="img/core-img/logo-white.png" alt="">
        <!-- Register Form-->
        <div class="register-form mt-5 px-4">
            <form action="http://demo.designing-world.com/suha-v1.3.0/home.html" method="post">
                <div class="form-group text-left mb-4">
                    <span>Username</span>
                    <label for="username"><i class="lni-user"></i></label>
                    <input class="form-control" id="username" type="text" placeholder="info@example.com">
                </div>
                <div class="form-group text-left mb-4">
                    <span>Password</span>
                    <label for="password"><i class="lni-lock"></i></label>
                    <input class="form-control" id="password" type="password" placeholder="********************">
                </div>
                <button class="btn btn-success btn-lg w-100">Login</button>
            </form>
        </div>
        <!-- Login Meta-->
        <div class="login-meta-data">
            <a class="forgot-password d-block mt-3 mb-1" href="forgetpassword">Forgot Password?</a>
            <p class="text-white mb-0">Didn't have an account?<a class="ml-2" href="register
                                                                 ">Register</a></p>
        </div>
    </div>
</div>

